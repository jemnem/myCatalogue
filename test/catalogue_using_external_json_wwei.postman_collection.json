							"pm.test(\"check the catalouge content\",function(){",
							"    var jsonData=pm.response.json();",
							"    pm.expect(jsonData.id).to.eql(data.id);",
							"    pm.expect(jsonData.name).to.eql(data.name);",
							"    pm.expect(jsonData.price).to.eql(data.price);",
